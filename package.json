{
  "name": "iamfast-vscode",
  "displayName": "IAMFast",
  "description": "AWS IAM policy generation from application code",
  "version": "0.0.2",
  "author": {
    "name": "Ian Mckay",
    "email": "iamfast@ian.mn"
  },
	"keywords": [
		"AWS",
		"AST",
    "IAM"
	],
  "publisher": "iann0036",
  "icon": "assets/logo_128.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/iann0036/iamfast-vscode.git"
  },
	"bugs": {
		"url": "https://github.com/iann0036/iamfast-vscode/issues"
	},
  "engines": {
    "vscode": "^1.53.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:iamfast.showIAMPolicy"
  ],
  "main": "./out/extension.js",
  "preview": true,
	"galleryBanner": {
		"color": "#353535",
		"theme": "dark"
	},
  "contributes": {
    "commands": [
      {
        "command": "iamfast.showIAMPolicy",
        "title": "Show IAM Policy",
        "icon": {
          "light": "icon-light.png",
          "dark": "icon-dark.png"
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "iamfast.showIAMPolicy",
          "group": "navigation",
          "when": "resourceLangId == javascript || resourceLangId == javascriptreact || resourceLangId == jsx || resourceLangId == c || resourceLangId == cpp || resourceLangId == go || resourceLangId == java || resourceLangId == python"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "cp -f ./node_modules/iamfast/package-module.json ./node_modules/iamfast/package.json && tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.53.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  },
  "dependencies": {
    "iamfast": "github:iann0036/iamfast"
  }
}
